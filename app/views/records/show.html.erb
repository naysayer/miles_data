<%- model_class = Record -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:start_use_coords) %>:</strong></dt>
  <dd><%= @record.start_use_coords %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_use_coords) %>:</strong></dt>
  <dd><%= @record.stop_use_coords %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_location) %>:</strong></dt>
  <dd><%= @record.start_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_location) %>:</strong></dt>
  <dd><%= @record.stop_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_odometer) %>:</strong></dt>
  <dd><%= @record.start_odometer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_odometer) %>:</strong></dt>
  <dd><%= @record.stop_odometer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason) %>:</strong></dt>
  <dd><%= @record.reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_lat) %>:</strong></dt>
  <dd><%= @record.start_lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_long) %>:</strong></dt>
  <dd><%= @record.start_long %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_lat) %>:</strong></dt>
  <dd><%= @record.stop_lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_long) %>:</strong></dt>
  <dd><%= @record.stop_long %></dd>
  <dt><strong><%= model_class.human_attribute_name(:car) %>:</strong></dt>
  <dd><%= @record.car %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              records_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_record_path(@record), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              record_path(@record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
